<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anno.ETCC.Login">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
android:id="@+id/scrloll"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="40dp"
        >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            >


            <EditText
                android:layout_marginTop="10dp"
                android:layout_margin="15dp"
                android:id="@+id/etEmail"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="25dp"/>

            <EditText
                android:layout_margin="15dp"
                android:id="@+id/etPassword"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="25dp"/>
            <Button
                android:layout_margin="15dp"
                android:id="@+id/btsignin"
                android:text="Login"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>
            <TextView
                android:id="@+id/tvSignup"
                android:textSize="18dp"
                android:layout_marginBottom="30dp"
                android:textAlignment="center"
                android:text="Dont have account? Register here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </RelativeLayout>
    </android.support.v7.widget.CardView>
    </ScrollView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="33dp"
        app:cardBackgroundColor="@color/btcolor"
android:id="@+id/baradmin"
        android:layout_below="@+id/scrloll"
        android:layout_width="match_parent"
        android:layout_height="15dp"></android.support.v7.widget.CardView>
    </RelativeLayout>