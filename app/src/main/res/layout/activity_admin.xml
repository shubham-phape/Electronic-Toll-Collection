<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anno.ETCC.admin">

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/kitikapu"
    android:layout_marginTop="10dp"
    android:hint="Enter Amount to be deducted"
    android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_below="@+id/kitikapu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ettriggerparam"
        android:elevation="10dp"
        android:hint="Enter tagID of user"
        android:layout_marginTop="45dp"/>
    <Button
        android:layout_below="@+id/ettriggerparam"
        android:layout_marginTop="25dp"
        android:id="@+id/bttrigger"
        android:text="Trigger"
        android:textColor="@color/white"
        android:background="@color/btcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:layout_below="@+id/bttrigger"
        android:layout_marginTop="25dp"
        android:id="@+id/backlogin"
android:text="Go back to user login"
        android:textColor="@color/white"
        android:background="@color/btcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
