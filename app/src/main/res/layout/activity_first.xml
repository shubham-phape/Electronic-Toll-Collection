<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scrollbars="vertical"
        tools:context="anno.ETCC.first">


        <android.support.v7.widget.CardView
            android:id="@+id/jsttoreferintroimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:elevation="10dp"
            app:cardElevation="10dp">

            <ImageSwitcher
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:src="@drawable/sm3" />

            </ImageSwitcher>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/jbjsscad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jsttoreferintroimg"
            android:layout_marginTop="15dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"

                app:cardElevation="10dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TableRow>

                        <Button
                            android:id="@+id/btrecharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="7dp"
                            android:layout_weight="1"
                            android:background="@color/btcolor"
                            android:text="Recharge"
                            android:textColor="@color/white" />


                    </TableRow>

                    <TableRow android:layout_marginTop="15dp">

                        <Button
                            android:id="@+id/About"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="7dp"
                            android:layout_weight="1"
                            android:background="@color/btcolor"
                            android:text="About us"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/Logout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@color/btcolor"
                            android:text="Logout"
                            android:textColor="@color/white" />
                    </TableRow>
                </TableLayout>


            </android.support.v7.widget.CardView>


        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jbjsscad"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/fabclr"
            android:clickable="true"
            app:borderWidth="0dp"
            app:elevation="10dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/username" />


    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>