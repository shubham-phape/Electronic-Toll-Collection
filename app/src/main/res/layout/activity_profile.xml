<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:scrollbars="vertical"    tools:context="anno.ETCC.profile">
    <ScrollView
        android:id="@+id/profscroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/prophotocard"
            app:cardElevation="10dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profilephotomale"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_below="@+id/profilephotomale"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profilename"
                    android:textSize="20dp"


                    android:textAlignment="center"
                    android:paddingBottom="10dp"/>



            </RelativeLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginTop="7dp"
            android:layout_below="@+id/prophotocard"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:id="@+id/tabg"
                android:paddingBottom="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:stretchColumns="1"
                android:weightSum="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent">
                <TableRow

                    android:layout_weight="1"
                    android:weightSum="1">
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Phone Number"/>
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/profphoneno"
                        />
                </TableRow>
                <TableRow
                    android:layout_marginTop="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Adharcard Number"
                    />
                    <TextView
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/profadharcrd"

                        android:textColor="@color/colorPrimary"
                        />
                </TableRow>
                <TextView
                    android:layout_marginTop="15dp"

                    android:layout_width="match_parent"
                    android:text="Address"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:id="@+id/profaddress"

                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    />
                <TableRow
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/profcity"

                        android:textColor="@color/colorPrimary"
                        />
                    </TableRow>
                <TableRow
                    android:id="@+id/iskore"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_height="wrap_content"
                        android:text="Pincode"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/profpincode"

                        android:textColor="@color/colorPrimary"
                        />
                </TableRow>
                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    app:cardElevation="5dp"
                    ></android.support.v7.widget.CardView>
                <TextView
                    android:layout_marginTop="15dp"
                    android:text="Vehicle Deatails"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:elevation="8dp"
                    android:paddingBottom="8dp"/>
                <TableRow
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_height="wrap_content"
                        android:text="Vehicle Number"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/profvehno"

                        android:textColor="@color/colorPrimary"
                        />
                </TableRow>
                <TableRow
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_height="wrap_content"
                        android:text="TagID"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:elevation="15dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/proftagid"

                        android:textColor="@color/colorAccent"
                        />
                </TableRow><TableRow
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Vehicle Type"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/profvehtype"

                    android:textColor="@color/colorPrimary"
                    />
            </TableRow>
                <TableRow
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_height="wrap_content"
                        android:text="Registration Region"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/profregno"

                        android:textColor="@color/colorPrimary"
                        />
                </TableRow>

                <android.support.v7.widget.CardView

                    android:layout_marginTop="20dp"
                    app:cardElevation="20dp"
                    app:cardBackgroundColor="@color/btcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:text="Your Balance ( in â‚¹ ) :"
                            />
                        <TextView
                            android:textSize="18dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/profbalance"/>
                    </TableRow>
                </android.support.v7.widget.CardView>






            </TableLayout>
        </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
