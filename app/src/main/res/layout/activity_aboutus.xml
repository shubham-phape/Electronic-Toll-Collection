<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:scrollbars="vertical"
    tools:context="anno.ETCC.aboutus">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/abt1crd"

        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/aa"
        android:layout_height="wrap_content">

        <TextView
            android:paddingBottom="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"

            android:textColor="@color/white"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="22dp"

            android:id="@+id/abouttv"
            android:layout_marginTop="15dp"/>
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView

            android:layout_below="@+id/abt1crd"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:id="@+id/imgabtcaed"
                app:cardElevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="211dp"
                    android:src="@drawable/sm5"
                    />
            </android.support.v7.widget.CardView>
                <ScrollView
                    android:layout_below="@+id/imgabtcaed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
android:layout_marginTop="10dp"
    android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about1"/>

    <TextView

        android:layout_below="@+id/txt1"
        android:id="@+id/txt2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about2"/>
    <TextView
        android:layout_below="@+id/txt2"
        android:id="@+id/txt3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about3"/>
    <TextView
        android:layout_below="@+id/txt3"
        android:id="@+id/txt4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:text="@string/abt4"/>

                </RelativeLayout>
                </ScrollView>




            </RelativeLayout>

        </android.support.v7.widget.CardView>


</RelativeLayout>
