<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:scrollbars="vertical"
    tools:context="anno.ETCC.reports">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/abt1card"

        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/aa"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:paddingBottom="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report"

            android:textColor="@color/white"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="22dp"

            android:id="@+id/abouttv"
            android:layout_marginTop="15dp"/>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_below="@+id/abt1card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <TableLayout
            android:id="@+id/tabreport"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:stretchColumns="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Last Recharge Amount ( in ₹ )"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/lastrech"
                    android:textAlignment="center"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Balance before recharge ( in ₹ )"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/balbefore"
                    android:textAlignment="center"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Last Deduction Amount ( in ₹ )"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/lastdeduc"
                    android:textAlignment="center"/>

            </TableRow>
            <TableRow
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Balance before last deduction ( in ₹ )"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/befdec"
                    android:textAlignment="center"/>
            </TableRow>
        </TableLayout>
        <Button
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/btcolor"
            android:text="Recharge your Account"
            android:textColor="@color/white"
            android:id="@+id/btreprecharge"
            android:layout_width="match_parent"
android:layout_below="@+id/tabreport"
            android:layout_height="wrap_content" />
            </RelativeLayout>
    </android.support.v7.widget.CardView>

    </RelativeLayout>